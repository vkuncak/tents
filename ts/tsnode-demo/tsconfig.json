// tsconfig.json
{
  "compilerOptions": {
    "target": "ES2020",                  // JavaScript version output
    "module": "commonjs",                // Node-compatible modules
    "rootDir": "src",                    // where your .ts files live
    "outDir": "dist",                    // where compiled .js goes
    "strict": true,                      // enable all strict type-checking options
    "esModuleInterop": true,             // allow default imports from CommonJS
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["src"],                    // include all files under src/
  "exclude": ["node_modules", "dist"]    // ignore these folders
}
